<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/azull"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título del registro -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Producto"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="24dp" />

        <!-- Campo de Nombre del Producto -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Producto"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <!-- Campo de Tipo de Producto -->
        <EditText
            android:id="@+id/tvTipoProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de Producto"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <!-- Campo de Número de Serie -->
        <EditText
            android:id="@+id/etNumeroSerie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de Serie"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Botón para registrar -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
